{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "Python Debugger: Module",
        "type": "debugpy",
        "request": "launch",
        "module": "src"
    },
    {
        "name": "Python Debugger: Discord Bot",
        "type": "debugpy",
        "request": "launch",
        "module": "src.bot"
    },
    {
        "name": "Debug Tests (pytest)",
        "type": "debugpy",
        "request": "launch",
        "module": "pytest",
        "args": [
            "${file}",
            "-s",
        ],
        "console": "integratedTerminal",
        "justMyCode": true
    }
    ]
}
